<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_splash"
    app:startDestination="@id/splashViewFragment">

    <fragment
        android:id="@+id/splashViewFragment"
        android:name="com.partyhood.ui.splash.SplashViewFragment"
        android:label="SplashViewFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashViewFragment_to_mainViewFragment"
            app:destination="@id/mainViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/splashViewFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainViewFragment"
        android:name="com.partyhood.ui.main.MainViewFragment"
        android:label="MainViewFragment"
        tools:layout="@layout/activity_main" />

</navigation>